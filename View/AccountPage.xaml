<Page x:Class="MoneyManagerGavr.View.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyManagerGavr.View"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AccountPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <ContentControl Grid.ColumnSpan="2"
                        Style="{StaticResource FullWidthUnderlinedHeader}"
                        Content="Аккаунт"/>

        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Информация об аккаунте:"
                       Foreground="{StaticResource TextColor}"
                       FontSize="24"
                       Margin="0 0 0 20"/>

            <TextBlock x:Name="NameText"
                       Foreground="{StaticResource TextColor}"
                       FontSize="18"
                       Margin="0 0 0 10"/>

            <TextBlock x:Name="SurnameText"
                       Foreground="{StaticResource TextColor}"
                       FontSize="18"
                       Margin="0 0 0 10"/>

            <TextBlock x:Name="IdText"
                       Text="ID: "
                       Foreground="{StaticResource TextColor}"
                       FontSize="18"
                       Margin="0 0 0 30"/>

            <StackPanel Grid.Row="2" Orientation="Vertical">
                <Button Content="Изменить данные аккаунта"
                        Foreground="{StaticResource TextColor}"
                        Background="{StaticResource SecondaryColor}"
                        Width="300"
                        Height="50"
                        FontSize="18"
                        Margin="0 0 0 20"
                        Cursor="Hand"
                        Click="EditAccount_Click"/>

                <Button Content="Удалить аккаунт"
                        Foreground="Black"
                        Background="Red"
                        Width="300"
                        Height="50"
                        FontSize="18"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="DeleteAccount_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
