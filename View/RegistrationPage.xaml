<Page x:Class="MoneyManagerGavr.View.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyManagerGavr.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Регистрация "
              Foreground="{StaticResource TextColor}"
              FontSize="24px"
              HorizontalAlignment="Center"
              Margin="0 0 0 10px"
              FontFamily="Rockwell Extra Bold"/>
            <TextBox x:Name="FirstNameTextBox"
                     Width="300"
                     Height="40"
                     Margin="0 0 0 10"/>

            <TextBox x:Name="LastNameTextBox"
                     Width="300"
                     Height="40"
                     Margin="0 0 0 10"/>

            <TextBox x:Name="UsernameTextBox"
                     Width="300"
                     Height="40"
                     Margin="0 0 0 10"/>

                <PasswordBox x:Name="PasswordBox"
                         Width="300"
                         Height="40"
                         Margin="0 0 0 20"/>
            <Button Content="Зарегистрироваться"
               Margin="0 20px 0 0"
               Width="300px"
               Height="50px"
               Background="{StaticResource SecondaryColor}"
               Foreground="{StaticResource ElementsColor}"
               FontSize="18px"
               FontWeight="Bold" Click="Registration_Button_Click"
               FontFamily="Rockwell Extra Bold"/>
            <Label Content="Вернуться назад"
               Foreground="{StaticResource TextColor}"
               FontSize="15px"
               HorizontalAlignment="Center"
               Margin="0 10 0 20px" MouseDown="Go_Back_Label_Click"
               Cursor="Hand"
               FontFamily="Rockwell Extra Bold"/>
        </StackPanel>
    </Grid>
</Page>
